{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": false
  },
  "exclude": [
    "node_modules",
    "vendor"
  ]
}

